// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  business  Business?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Business {
  id              String      @id @default(cuid())
  name            String
  category        String      // 'retail' | 'restaurant' | 'services' | 'other'
  whatsappNumber  String?     // Número de WhatsApp del comerciante
  virtualNumber   String      @unique // Número virtual de Twilio
  twilioSid       String?     // SID de Twilio para este negocio
  address         String?
  config          Json        // BusinessConfig JSON
  isActive        Boolean     @default(true)
  
  // Relaciones
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  analytics Analytics[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("businesses")
}

model Analytics {
  id          String   @id @default(cuid())
  businessId  String
  messageType String   // 'received' | 'sent' | 'unanswered' | 'fallback'
  content     String?  // Contenido del mensaje (truncado si es muy largo)
  fromNumber  String?  // Número del cliente
  category    String?  // Categoría del mensaje (greeting, hours, products, etc.)
  responseTime Int?    // Tiempo de respuesta en milisegundos
  timestamp   DateTime @default(now())
  
  // Relaciones
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@map("analytics")
  @@index([businessId, timestamp])
}

model Subscription {
  id        String   @id @default(cuid())
  businessId String  @unique
  plan      String   @default("basic") // 'basic' | 'pro'
  status    String   @default("active") // 'active' | 'inactive' | 'cancelled'
  startDate DateTime @default(now())
  endDate   DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subscriptions")
}